<h1> Update your article:</h1>

<% if @article.errors.any? %>
  <h2>Found the following errors when updating your article:</h2>
  <ul>
    <% @article.errors.full_messages.each do |err_msg| %>
        <li> <%= err_msg %> </li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= form_for @article do |f|%>
    <p>
        <%= f.label :title %>
        </br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        </br>
        <%= f.text_area :description %>
    </p>
    <%= f.submit %>
  <% end %>
</div>
</br></br>
<%= link_to 'Articles List', articles_path %>
