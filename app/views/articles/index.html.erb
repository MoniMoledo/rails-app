<h1>Articles: </h1>
<p>
    <%= link_to 'Create new article', articles_path %>
</p>
<table>
    <tr>
        <th> Title </th>
        <th> Description </th>
        <th> Actions </th>
    </tr>
    <% @articles.each do |a| %>
        <tr>
            <td> <%= a.title %> </td>
            <td> <%= a.description %> </td>
            <td> <%= link_to 'View', article_path(a) %>
                 <%= link_to 'Edit', edit_article_path(a) %> 
                 <%# <%= link_to 'Delete', destroy_article_path(a) %>
            </td>
        </tr>
    <% end %>
</table>